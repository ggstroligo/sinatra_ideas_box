<html>
  <head>
    <title>IdeaBox</title>
  </head>
  <body>
    <h1>IdeaBox</h1>

    <form action="/<%= id %>" method="POST">
      <input type="hidden" name="_method" value="PUT" />
      <input type="text" name="idea_title" value="<%= idea.title %>" /><br>
      <textarea name='idea_description'><%= idea.description %></textarea>
      <input type='submit' />
    </form>
  </body>
</html>